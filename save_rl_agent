import gymnasium as gym
from stable_baselines3 import PPO

def main():
    # 1. Create environment (CartPole used as demo for wildlife movement simulation)
    env = gym.make("CartPole-v1")

    # 2. Initialize agent (PPO with a simple neural network policy)
    model = PPO("MlpPolicy", env, verbose=1)

    # 3. Train the agent
    print("ðŸš€ Training agent...")
    model.learn(total_timesteps=5000)

    # 4. Save trained agent
    model.save("ppo_cartpole_agent")
    print("âœ… Agent saved as 'ppo_cartpole_agent.zip'")

    # 5. Demonstrate loading the agent back
    loaded_model = PPO.load("ppo_cartpole_agent")
    print("âœ… Agent loaded successfully and ready for reuse!")

if __name__ == "__main__":
    main()
